  <h3 class="strip"><a target="_blank" href="<%= event.fb_url %>"><%= raw event.name %></a></h4>
  <div class="inside">
    <div class="event">
     <h3><%= raw event. headline %></h3>
     <p><b>Kiedy:</b> <%= raw event.date_description %></p>
     <p><b>Gdzie: </b><%= raw event.location %></p>
